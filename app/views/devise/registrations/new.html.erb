<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>


  <fieldset>
    <legend>Sign up!</legend>
     
    <div class="control-group">

      <%= f.label :name, :class => "control-label" %>
      <div class="controls">

        <%= f.text_field :name, :class => "input-xlarge focused", :id => "focusedInput" %>
      </div>

    </div>
 
    <div class="control-group">

      <%= f.label :email, :class => "control-label" %>
      <div class="controls">

        <%= f.email_field :email, :class => "input-xlarge focused", :id => "focusedInput" %>
      </div>

    </div>
    
     <div class="control-group">

      <%= f.label :password, :class => "control-label" %>
      <div class="controls">

        <%= f.password_field :password, :class => "input-xlarge focused", :id => "focusedInput" %>
      </div>

    </div>
   <div class="control-group">

      <%= f.label :password_confirmation, :class => "control-label" %>
      <div class="controls">

        <%= f.password_field :password_confirmation, :class => "input-xlarge focused", :id => "focusedInput" %>
      </div>

    </div>

   <div class="control-group">
      <%= f.submit "Sign Up!", :class => "btn-primary" %>

   </div>
  </fieldset>

<% end %>

<%= render "links" %>
